<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">false</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button_green_circle_ml">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_green_circle</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="button_green_rounded">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_green_rounded</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="spinner_custom">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
