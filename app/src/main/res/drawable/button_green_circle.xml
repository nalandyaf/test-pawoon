            <solid android:color="@color/colorPrimaryDark" />
            <size android:width="@dimen/button_green_circle_size" android:height="@dimen/button_green_circle_size" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/radius_high" />
            <solid android:color="@color/colorPrimaryDark" />
            <size android:width="@dimen/button_green_circle_size" android:height="@dimen/button_green_circle_size" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/radius_high" />
            <solid android:color="@color/colorPrimary" />
            <size android:width="@dimen/button_green_circle_size" android:height="@dimen/button_green_circle_size" />
        </shape>
    </item>
